<section>
        <div class="container mt-5">
            <div class="row">
                <!--product card start-->
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:33rem">
                        <img class="card-img-top"
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Description}}</p>
                            <p class="card-text">{{this.Category}}</p>
                            <h6 class="card-text">{{this.Price}}</h6>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary float-right">Add to cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
                <!--product card start-->
            </div>
        </div>
    </section>